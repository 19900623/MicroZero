{
  "server.urls": "http://*:8080",
  "ASPNETCORE_ENVIRONMENT_": "Development",
  "AppName": "WechatBridge",
  /*ZeroNet站点配置*/
  "Zero": {
    "Global": {
    },
    "WechatBridge": {
      "StationName": "WechatBridge",
      "ShortName": "wx",
      /*ZeroCenter监测端口号*/
      "BridgeCallAddress": "8900",
      /*ZeroCenter管理端口号*/
      "BridgeResultAddress": "8901",
      "BridgeLocalAddress": "tcp://127.0.0.1:6666" 
    },
    "socketOption": {
      "Backlog": 50000, //连接队列数量
      "ConnectTimeout": 500, // 连接失败时长
      "HeartbeatIvl": 1000, //心跳间隔时长
      "HeartbeatTimeout": 200, //心跳超时时长
      "HeartbeatTtl": 200, //心跳TTL
      "Linger": 200, //自动关闭时长
      "ReconnectIvl": 500, // 重新连接时间间隔
      "ReconnectIvlMax": 500, //重新连接失败时长
      "RecvTimeout": 30000, //接收超时时长
      "SendTimeout": 30000, //发送超时时长
      "TcpKeepalive": 1, //启用Keeplive
      "TcpKeepaliveIdle": 4096, //TCP发送keepalive消息的频度,单位秒
      "TcpKeepaliveIntvl": 4096 //当TcpKeepalive探测没有确认时，重新发送探测的频度,单位秒
    }
  },
  "AppSettings": {
    "HookApi": true
  },
  "LogRecorder": {
    /*是否记录跟踪日志*/
    "monitor": true,
    "level": "Debug",
    "console": true
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  //以下信息会被自动识别，如无特殊说明，不用的参数可以删除，但修改 key 后将会无法自动识别！

  //CO2NET 设置
  "SenparcSetting": {
    //以下为 CO2NET 的 SenparcSetting 全局配置，请勿修改 key，勿删除任何项

    "IsDebug": true,
    "DefaultCacheNamespace": "DefaultCache",

    //分布式缓存
    "Cache_Redis_Configuration": "192.168.1.192:6379,defaultDatabase=3",
    //"Cache_Redis_Configuration": "localhost:6379",//不包含密码
    //"Cache_Redis_Configuration": "localhost:6379,password=senparc,connectTimeout=1000,connectRetry=2,syncTimeout=10000,defaultDatabase=3",//密码及其他配置
    "Cache_Memcached_Configuration": "Memcached配置",
    "SenparcUnionAgentKey": "SenparcUnionAgentKey"
  },
  //Senparc.Weixin SDK 设置
  "SenparcWeixinSetting": {
    "Token": "wenrong",
    "EncodingAESKey": "c0E0INDjQDGDSliKPmQd3VykisXiapMmb2elw7zOodX",
    "WeixinAppId": "wxf44faae689fe2d27",
    "WeixinAppSecret": "0f88ff0d00dc4d13ed092992a3468970"
  }
}
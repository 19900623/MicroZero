{
  "server.urls": "http://*:6000",
  "ASPNETCORE_ENVIRONMENT_": "Development",
  "AppName": "HttpRoute",
  /*ZeroNet站点配置*/
  "Zero": {
    "Global": {
      /*ZeroCenter主机IP地址*/
      "ZeroAddress": "118.31.13.240",
      /*ZeroCenter监测端口号*/
      "ZeroMonitorPort": 8001,
      /*ZeroCenter管理端口号*/
      "ZeroManagePort": 8000,
      "ServiceKey": "route"
    },
    "HttpRoute": {
      "StationName": "HttpRoute",
      "ShortName": "route",
      "AddInPath": "AddIn",
      /*限速模式（0 单线程 1 按线程数限制 2 按等待数限制）*/
      "SpeedLimitModel": "ThreadCount",
      /*最大等待数*/
      "MaxWait": 512,
      /*最大Task与Cpu核心数的倍数关系*/
      "TaskCpuMultiple": 1
    },
    "socketOption": {
      "Backlog": 50000, //连接队列数量
      "ConnectTimeout": 500, // 连接失败时长
      "HeartbeatIvl": 1000, //心跳间隔时长
      "HeartbeatTimeout": 200, //心跳超时时长
      "HeartbeatTtl": 200, //心跳TTL
      "Linger": 200, //自动关闭时长
      "ReconnectIvl": 500, // 重新连接时间间隔
      "ReconnectIvlMax": 500, //重新连接失败时长
      "RecvTimeout": 10000, //接收超时时长
      "SendTimeout": 15000, //发送超时时长
      "TcpKeepalive": 1, //启用Keeplive
      "TcpKeepaliveIdle": 4096, //TCP发送keepalive消息的频度,单位秒
      "TcpKeepaliveIntvl": 4096 //当TcpKeepalive探测没有确认时，重新发送探测的频度,单位秒
    }
  },
  "AppSettings": {
    "HookApi": true
  },
  "LogRecorder": {
    /*是否记录跟踪日志*/
    "monitor": true
  },
  "ConnectionStrings": {
    /*校验Auth的Redis的地址*/
    "Redix": "127.0.0.1:6379"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  }
}